@model CourseWork2019.Controllers.QuizzesController.TaskModel
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Quiz</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quiz.QuizName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quiz.QuizName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quiz.CreationDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quiz.CreationDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Quiz.QuizID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
<div>
    <table>
        @foreach(var i in Model.Questions)
        {
            <tr>
                <td>
                    @i.QuestionName
                </td>
            </tr>   
        }
    </table>
</div>