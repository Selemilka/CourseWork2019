@model CourseWork2019.Models.Answer

@{
    ViewData["Title"] = "AddAnswer";
}

<h1>AddAnswer</h1>

<h4>Answer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddAnswer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AnswerText" class="control-label"></label>
                <input asp-for="AnswerText" class="form-control" />
                <span asp-validation-for="AnswerText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsCorrectAnswer" class="control-label"></label>
                <input asp-for="IsCorrectAnswer" type="checkbox" />
                <span asp-validation-for="IsCorrectAnswer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="QuestionID" class="form-control" value="@ViewBag.ID" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
