@model CourseWork2019.Models.Question

@{
    ViewData["Title"] = "Редактирование вопроса";
}

<h1>Редактирование вопроса</h1>

<h4>Вопрос:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="QuestionID" />
            <div class="form-group">
                <label asp-for="QuestionName" class="control-label"></label>
                <input asp-for="QuestionName" class="form-control" />
                <span asp-validation-for="QuestionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuestionText" class="control-label"></label>
                <input asp-for="QuestionText" class="form-control" />
                <span asp-validation-for="QuestionText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RubricID" class="control-label"></label>
                <select asp-for="RubricID" class="form-control" asp-items="ViewBag.RubricID"></select>
                <span asp-validation-for="RubricID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <a asp-action="AddAnswer" asp-route-id="@Model.QuestionID">Добавить вариант ответа</a>
            </div>

            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
