@model IEnumerable<CourseWork2019.Models.Question>

@{
    ViewData["Title"] = "Вопросы";
}

<h1>Список вопросов</h1>

<p>
    <a asp-action="Create">Создать новый</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.QuestionID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuestionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuestionText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rubric)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rubric.RubricName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.QuestionID">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@item.QuestionID">Подробнее</a> |
                <a asp-action="Delete" asp-route-id="@item.QuestionID">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
